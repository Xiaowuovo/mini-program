/** app.wxss **/
page {
  /* 基础变量 */
  --primary-color: #4CAF50;
  --primary-gradient: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  --secondary-color: #FF9800;
  --text-main: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --bg-color: #F7F8FA;
  --card-bg: #FFFFFF;

  /* 布局变量 */
  --page-padding: 32rpx;
  --card-radius: 24rpx;

  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* --- 通用卡片样式 --- */
.card {
  background: var(--card-bg);
  border-radius: var(--card-radius);
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.99);
}

/* --- 通用按钮样式 --- */
.btn-primary {
  background: var(--primary-gradient);
  color: #fff;
  border-radius: 50rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.2);
}

/* --- 文本工具类 --- */
.text-truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-truncate-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* --- Flex工具类 --- */
.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

/* --- 标签样式 --- */
.tag {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.tag-green { background: #E8F5E9; color: #4CAF50; }
.tag-orange { background: #FFF3E0; color: #FF9800; }
.tag-blue { background: #E3F2FD; color: #2196F3; }
.tag-gray { background: #F5F5F5; color: #999999; }