<view class="container community-page">
  <!-- é¡¶éƒ¨æ ‡ç­¾æ  -->
  <view class="header-tabs">
    <view
      wx:for="{{tabs}}"
      wx:key="key"
      class="tab-item {{currentTab === item.key ? 'active' : ''}}"
      bindtap="onTabChange"
      data-tab="{{item.key}}"
    >
      {{item.label}}
    </view>
  </view>

  <!-- å¸–å­åˆ—è¡¨ -->
  <scroll-view class="post-list" scroll-y>
    <view
      wx:for="{{posts}}"
      wx:key="id"
      class="post-card"
      bindtap="navigateToDetail"
      data-id="{{item.id}}"
    >
      <!-- ç”¨æˆ·ä¿¡æ¯ -->
      <view class="post-header">
        <image
          src="{{item.user_avatar || '/images/default-avatar.png'}}"
          class="user-avatar"
        ></image>
        <view class="user-info">
          <text class="user-name">{{item.user_nickname || 'åŒ¿åç”¨æˆ·'}}</text>
          <text class="post-time">{{item.created_at}}</text>
        </view>
      </view>

      <!-- å¸–å­å†…å®¹ -->
      <view class="post-content">
        <view class="post-title" wx:if="{{item.title}}">{{item.title}}</view>
        <view class="post-text">{{item.content}}</view>

        <!-- å›¾ç‰‡å±•ç¤º -->
        <view class="post-images" wx:if="{{item.images && item.images.length > 0}}">
          <view
            wx:if="{{item.images.length === 1}}"
            class="image-grid single"
          >
            <image
              src="{{item.images[0]}}"
              mode="aspectFill"
              class="post-image"
              catchtap="previewImage"
              data-urls="{{item.images}}"
              data-current="{{item.images[0]}}"
            ></image>
          </view>

          <view
            wx:elif="{{item.images.length === 2 || item.images.length === 4}}"
            class="image-grid two"
          >
            <image
              wx:for="{{item.images}}"
              wx:key="index"
              wx:for-item="img"
              src="{{img}}"
              mode="aspectFill"
              class="post-image"
              catchtap="previewImage"
              data-urls="{{item.images}}"
              data-current="{{img}}"
            ></image>
          </view>

          <view wx:else class="image-grid three">
            <image
              wx:for="{{item.images}}"
              wx:key="index"
              wx:for-item="img"
              src="{{img}}"
              mode="aspectFill"
              class="post-image"
              catchtap="previewImage"
              data-urls="{{item.images}}"
              data-current="{{img}}"
            ></image>
          </view>
        </view>
      </view>

      <!-- äº’åŠ¨æ  -->
      <view class="post-actions">
        <view
          class="action-item {{item.liked ? 'liked' : ''}}"
          catchtap="handleLike"
          data-id="{{item.id}}"
          data-liked="{{item.liked}}"
        >
          <text class="action-icon">{{item.liked ? 'â¤ï¸' : 'ğŸ¤'}}</text>
          <text class="action-text">{{item.like_count || 0}}</text>
        </view>

        <view class="action-item">
          <text class="action-icon">ğŸ’¬</text>
          <text class="action-text">{{item.comment_count || 0}}</text>
        </view>

        <view class="action-item">
          <text class="action-icon">ğŸ‘ï¸</text>
          <text class="action-text">{{item.view_count || 0}}</text>
        </view>
      </view>
    </view>

    <!-- åŠ è½½çŠ¶æ€ -->
    <view wx:if="{{loading}}" class="loading-state">
      <text>åŠ è½½ä¸­...</text>
    </view>

    <!-- ç©ºçŠ¶æ€ -->
    <view wx:if="{{!loading && posts.length === 0}}" class="empty-state">
      <image src="/images/empty.png" class="empty-image"></image>
