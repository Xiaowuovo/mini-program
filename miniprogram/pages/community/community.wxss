/* pages/community/community.wxss */
.community-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部标签栏 */
.header-tabs {
  display: flex;
  background-color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #4CAF50;
  border-radius: 3rpx;
}

/* 帖子列表 */
.post-list {
  flex: 1;
  padding: 20rpx;
}

.post-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 用户信息 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999999;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.post-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 图片网格 */
.post-images {
  margin-top: 20rpx;
}

.image-grid {
  display: grid;
  gap: 10rpx;
}

.image-grid.single {
  grid-template-columns: 1fr;
}

.image-grid.single .post-image {
  max-height: 500rpx;
  border-radius: 12rpx;
}

.image-grid.two {
  grid-template-columns: repeat(2, 1fr);
}

.image-grid.three {
  grid-template-columns: repeat(3, 1fr);
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 互动栏 */
.post-actions {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.action-item.liked {
  background-color: #FFE5E5;
}

.action-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
}

.action-item.liked .action-text {
  color: #FF6B6B;
}

/* 发布按钮 */
.publish-btn {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(76, 175, 80, 0.4);
  z-index: 100;
}

.publish-icon {
  font-size: 48rpx;
}

/* 加载和空状态 */
.loading-state,
.load-more,
.no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 40rpx;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999999;
}
