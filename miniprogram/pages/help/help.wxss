/* pages/help/help.wxss */
.help-page {
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.section-icon {
  font-size: 44rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

/* FAQ样式 */
.faq-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.faq-item {
  background: #f8f8f8;
  border-radius: 10rpx;
  padding: 25rpx;
  transition: all 0.3s;
}

.faq-item.expanded {
  background: #e8f5e9;
}

.faq-question {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.question-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.expand-icon {
  font-size: 24rpx;
  color: #4CAF50;
  margin-left: 20rpx;
}

.faq-answer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #ddd;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 联系方式样式 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.contact-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.contact-icon {
  font-size: 44rpx;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.contact-label {
  font-size: 26rpx;
  color: #999;
}

.contact-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.contact-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 反馈表单样式 */
.feedback-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.picker-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 25rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #ccc;
  font-size: 24rpx;
}

.feedback-textarea {
  width: 100%;
  min-height: 250rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

.feedback-input {
  padding: 20rpx 25rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
}

.submit-btn {
  margin-top: 20rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: none;
}

/* 使用指南样式 */
.guide-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.guide-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.guide-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.guide-title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.guide-arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 20rpx;
}
