/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 装饰背景圆 */
.login-container::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 50%;
}

.login-container::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  left: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 50%;
}

.login-header {
  text-align: center;
  margin-bottom: 60rpx;
  z-index: 1;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 32rpx;
  border-radius: 40rpx;
  box-shadow: 0 12rpx 32rpx rgba(76, 175, 80, 0.2);
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #2E7D32;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #66BB6A;
  letter-spacing: 4rpx;
}

.login-content {
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.05);
  z-index: 1;
}

.welcome-text {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  text-align: center;
  margin-bottom: 16rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 60rpx;
}

.features {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  background: #F5F7FA;
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-item text:not(.feature-icon) {
  font-size: 24rpx;
  color: #666666;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.2);
}

.agreement {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 40rpx;
}

.agreement .link {
  color: #4CAF50;
  font-weight: 500;
}

.login-btn::after {
  border: none;
}

.admin-entry {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #FFB74D 0%, #FF9800 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.admin-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.admin-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
}