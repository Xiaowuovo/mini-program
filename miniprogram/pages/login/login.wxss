/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 50%, #A5D6A7 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 装饰性背景元素 */
.bg-decoration {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 0;
  pointer-events: none;
}

.leaf {
  position: absolute;
  font-size: 60rpx;
  opacity: 0.15;
  animation: float 6s ease-in-out infinite;
}

.leaf-1 {
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.leaf-2 {
  top: 30%;
  right: 15%;
  animation-delay: 2s;
}

.leaf-3 {
  bottom: 20%;
  left: 20%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-30rpx) rotate(10deg); }
}

.top-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  min-height: 300rpx;
}

.login-header {
  text-align: center;
  z-index: 1;
  animation: fadeInDown 0.8s ease;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.logo-wrapper {
  position: relative;
  display: inline-block;
  margin-bottom: 30rpx;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  box-shadow: 0 15rpx 40rpx rgba(76, 175, 80, 0.3);
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.logo-shadow {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 15rpx;
  background: radial-gradient(ellipse, rgba(76, 175, 80, 0.3), transparent);
  border-radius: 50%;
  animation: shadow 2s ease-in-out infinite;
}

@keyframes shadow {
  0%, 100% { transform: translateX(-50%) scale(1); opacity: 0.3; }
  50% { transform: translateX(-50%) scale(0.8); opacity: 0.2; }
}

.app-name {
  position: relative;
  margin-bottom: 20rpx;
}

.name-text {
  font-size: 52rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #2E7D32, #4CAF50, #66BB6A);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 3rpx;
}

.name-underline {
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #4CAF50, #66BB6A);
  margin: 12rpx auto 0;
  border-radius: 3rpx;
}

.app-desc {
  font-size: 26rpx;
  color: #388E3C;
  letter-spacing: 2rpx;
  font-weight: 500;
}

.login-content {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(30rpx);
  border-radius: 40rpx;
  padding: 45rpx 35rpx 35rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08);
  z-index: 1;
  animation: fadeInUp 0.8s ease 0.2s both;
  margin-bottom: 20rpx;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.welcome-section {
  text-align: center;
  margin-bottom: 10rpx;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #2E7D32;
  display: inline-block;
  position: relative;
}

.welcome-dots {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  margin-top: 10rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background: #4CAF50;
  border-radius: 50%;
  animation: dotPulse 1.5s ease-in-out infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dotPulse {
  0%, 100% { opacity: 0.3; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

.desc-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 35rpx;
  line-height: 1.5;
}

/* 登录历史 */
.login-history {
  margin-bottom: 35rpx;
  animation: slideIn 0.6s ease;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.history-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2E7D32;
}

.history-clear {
  font-size: 22rpx;
  color: #999;
  padding: 6rpx 14rpx;
  background: #F5F5F5;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.history-clear:active {
  background: #E0E0E0;
}

.history-list {
  background: #FAFAFA;
  border-radius: 20rpx;
  overflow: hidden;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #FFF;
  margin-bottom: 2rpx;
  transition: all 0.3s;
  position: relative;
}

.history-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 0;
  background: linear-gradient(90deg, #4CAF50, transparent);
  transition: width 0.3s;
}

.history-item:active::before {
  width: 8rpx;
}

.history-item:active {
  background: #F8F9FA;
  transform: translateX(8rpx);
}

.history-item:first-child {
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.history-item:last-child {
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  margin-bottom: 0;
}

.history-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.15);
  flex-shrink: 0;
}

.avatar-icon {
  font-size: 36rpx;
}

.history-info {
  flex: 1;
  min-width: 0;
}

.history-nickname {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-role {
  font-size: 22rpx;
}

.role-badge {
  display: inline-block;
  padding: 4rpx 14rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.role-badge.tenant {
  background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
  color: #2E7D32;
}

.role-badge.admin {
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
  color: #E65100;
}

.history-arrow {
  font-size: 40rpx;
  color: #CCC;
  font-weight: 300;
  transition: all 0.3s;
}

.history-item:active .history-arrow {
  color: #4CAF50;
  transform: translateX(6rpx);
}

.features {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  gap: 10rpx;
}

.feature-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeIn 0.6s ease;
}

.feature-item:nth-child(1) { animation-delay: 0.3s; }
.feature-item:nth-child(2) { animation-delay: 0.4s; }
.feature-item:nth-child(3) { animation-delay: 0.5s; }
.feature-item:nth-child(4) { animation-delay: 0.6s; }

@keyframes fadeIn {
  from { opacity: 0; transform: scale(0.8); }
  to { opacity: 1; transform: scale(1); }
}

.feature-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.15);
  transition: all 0.3s ease;
}

.feature-item:active .feature-icon-wrapper {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.2);
}

.feature-icon {
  font-size: 40rpx;
}

.feature-text {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
}

.buttons-group {
  margin-bottom: 30rpx;
}

.login-btn {
  position: relative;
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

/* 主按钮 - 登录 */
.primary-btn {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.35);
}

/* 次按钮 - 注册 */
.secondary-btn {
  background: #FFF;
  border: 2rpx solid #4CAF50;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.secondary-btn .btn-text {
  color: #4CAF50;
}

.btn-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.btn-text {
  font-size: 30rpx;
  color: #FFF;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.btn-shine {
  position: absolute;
  top: -50%;
  left: -100%;
  width: 50%;
  height: 200%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transform: skewX(-25deg);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { left: -100%; }
  20% { left: 150%; }
  100% { left: 150%; }
}

.btn-hover {
  transform: scale(0.97);
}

.primary-btn.btn-hover {
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.25);
}

.secondary-btn.btn-hover {
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 管理员切换 */
.admin-switch {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  margin-bottom: 25rpx;
  gap: 8rpx;
  transition: all 0.3s;
}

.admin-switch:active {
  opacity: 0.7;
}

.switch-text {
  font-size: 26rpx;
  color: #666;
}

.switch-arrow {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
  transition: transform 0.3s;
}

.admin-switch:active .switch-arrow {
  transform: translateX(6rpx);
}

/* 协议 */
.agreement {
  text-align: center;
  padding: 0 20rpx;
}

.agreement-text {
  font-size: 22rpx;
  color: #999;
}

.agreement .link {
  color: #4CAF50;
  font-weight: 600;
  margin: 0 4rpx;
}

/* 底部装饰 */
.footer-decoration {
  padding: 20rpx 0 env(safe-area-inset-bottom);
  text-align: center;
  z-index: 1;
}

.footer-text {
  font-size: 24rpx;
  color: #388E3C;
  opacity: 0.8;
  letter-spacing: 1rpx;
  animation: fadeIn 1s ease 0.8s both;
}