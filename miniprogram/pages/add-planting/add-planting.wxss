/* pages/add-planting/add-planting.wxss */
.add-planting-page {
  background: #F5F5F5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部提示 */
.header-tip {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.tip-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.tip-content {
  flex: 1;
}

.tip-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFF;
  margin-bottom: 8rpx;
}

.tip-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 表单区域 */
.form-section {
  background: #FFF;
  margin: 20rpx 0;
  padding: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 作物选择 */
.crop-scroll {
  width: 100%;
  white-space: nowrap;
}

.crop-grid {
  display: inline-flex;
  gap: 20rpx;
}

.crop-card {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  width: 140rpx;
  padding: 20rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  position: relative;
  transition: all 0.3s;
}

.crop-card.selected {
  background: #E8F5E9;
  border-color: #4CAF50;
}

.crop-icon {
  font-size: 56rpx;
  margin-bottom: 10rpx;
}

.crop-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.crop-days {
  font-size: 20rpx;
  color: #999;
}

.selected-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge-icon {
  color: #FFF;
  font-size: 20rpx;
  font-weight: 600;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.item-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

.item-input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.item-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

/* 信息提示 */
.info-section {
  background: #FFF3E0;
  margin: 20rpx 30rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #FF9800;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.info-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 提交区域 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #FFF;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: #FFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
}

.submit-btn.disabled {
  background: #E0E0E0;
  color: #999;
}
