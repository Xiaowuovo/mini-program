/* pages/reminders/reminders.wxss */
.reminders-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 100rpx;
}

/* 顶部横幅 */
.header-banner {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  padding: 40rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.banner-content {
  flex: 1;
}

.banner-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #FFF;
  margin-bottom: 8rpx;
}

.banner-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.banner-toggle {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
}

.toggle-label {
  font-size: 26rpx;
  color: #FFF;
  margin-right: 12rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #FFF;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 600;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.stat-value.pending {
  color: #FF9800;
}

.stat-value.completed {
  color: #4CAF50;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E0E0E0;
}

/* 筛选区域 */
.filter-section {
  background: #FFF;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.filter-scroll {
  width: 100%;
  white-space: nowrap;
}

.filter-tabs {
  display: inline-flex;
  padding: 0 30rpx;
}

.tab-item {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
  background: #F5F5F5;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
}

.tab-item.active .tab-text {
  color: #FFF;
  font-weight: 500;
}

/* 提醒列表 */
.reminder-list {
  padding: 0 30rpx;
}

.reminder-card {
  background: #FFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #4CAF50;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

/* 优先级颜色 */
.reminder-card.priority-5 {
  border-left-color: #F44336;
  background: linear-gradient(to right, #FFF5F4 0%, #FFF 10%);
}

.reminder-card.priority-4 {
  border-left-color: #FF9800;
  background: linear-gradient(to right, #FFFBF5 0%, #FFF 10%);
}

.reminder-card.priority-3 {
  border-left-color: #4CAF50;
}

.reminder-card.priority-2 {
  border-left-color: #2196F3;
}

/* 已完成状态 */
.reminder-card.completed {
  opacity: 0.7;
  border-left-color: #9E9E9E;
}

/* 卡片头部 */
.reminder-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.header-left {
  display: flex;
  flex: 1;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.reminder-icon {
  font-size: 44rpx;
}

.reminder-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.reminder-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.reminder-garden {
  font-size: 24rpx;
  color: #999;
}

.header-right {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

/* 优先级徽章 */
.priority-badge {
  font-size: 32rpx;
  margin-left: 8rpx;
}

/* 完成图标 */
.status-icon {
  width: 40rpx;
  height: 40rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFF;
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 卡片内容 */
.reminder-content {
  padding: 0;
}

.reminder-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
}

/* 来源标签 */
.source-tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  background: #E3F2FD;
  color: #2196F3;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.source-icon {
  margin-right: 6rpx;
}

.source-text {
  font-size: 22rpx;
}

/* 元数据 */
.reminder-metadata {
  background: #F8F8F8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.metadata-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.metadata-label {
  font-size: 24rpx;
  color: #999;
}

.metadata-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.metadata-value.error {
  color: #F44336;
}

/* 时间信息 */
.reminder-time {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.time-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.time-text {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.reminder-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #F0F0F0;
}

.action-btn {
  flex: 1;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
}

.action-btn.ignore {
  background: #F5F5F5;
  color: #666;
}

.action-btn.complete {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: #FFF;
}

/* 加载状态 */
.loading-state {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(76, 175, 80, 0.3);
  border-top-color: #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 15rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-manual-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: #FFF;
  font-size: 28rpx;
  border-radius: 50rpx;
  border: none;
}

.add-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 悬浮按钮 */
.fab-btn {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  border-radius: 50%;
  box-shadow: 0 8rpx 16rpx rgba(76, 175, 80, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.fab-icon {
  font-size: 48rpx;
  color: #FFF;
  font-weight: 300;
}

/* 底部安全区 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
}
