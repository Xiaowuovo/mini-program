/* pages/garden-detail/garden-detail.wxss */
.garden-detail-page {
  padding-bottom: 180rpx;
  background: #F7F8FA;
}

/* 图片轮播 - 沉浸式 */
.image-section {
  position: relative;
  height: 500rpx;
}

.garden-swiper {
  height: 100%;
}

.garden-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-indicator {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #FFFFFF;
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

.video-btn {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.video-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.video-btn text {
  font-size: 24rpx;
  color: var(--text-main);
  font-weight: 500;
}

/* 信息区域 - 上拉卡片效果 */
.info-section {
  background: #FFFFFF;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -40rpx; /* 负边距实现覆盖效果 */
  position: relative;
  z-index: 10;
  padding: 40rpx 32rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.garden-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.garden-name {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-main);
  flex: 1;
  margin-right: 20rpx;
}

.garden-status {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

.status-available { background: #E8F5E9; color: #4CAF50; }
.status-rented { background: #FFEBEE; color: #FF5252; }
.status-maintenance { background: #FFF3E0; color: #FF9800; }

.garden-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 32rpx;
}

.price-label {
  font-size: 26rpx;
  color: var(--text-light);
  margin-right: 12rpx;
}

.price-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #FF5252;
}

.price-unit {
  font-size: 26rpx;
  color: var(--text-light);
  margin-left: 4rpx;
}

.garden-specs {
  display: flex;
  background: #F7F8FA;
  border-radius: 16rpx;
  padding: 24rpx;
}

.spec-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.spec-item:first-child::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 2rpx;
  background: #E0E0E0;
}

.spec-label {
  font-size: 24rpx;
  color: var(--text-light);
  margin-bottom: 8rpx;
}

.spec-value {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
}

/* 通用区块 */
.desc-section, .features-section, .recommend-section {
  background: #FFFFFF;
  margin-top: 20rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: 4rpx;
}

.desc-content {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

/* 特色服务 */
.features-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  background: #F5F7FA;
  border-radius: 24rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.feature-item text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.bar-left {
  margin-right: 32rpx;
}

.bar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

.bar-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
}

.bar-btn text {
  font-size: 20rpx;
  color: var(--text-secondary);
}

.bar-right {
  flex: 1;
}

.rent-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rent-btn.available {
  background: var(--primary-gradient);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.3);
}

.rent-btn.disabled {
  background: #F0F0F0;
  color: #999999;
}