/* pages/profile/profile.wxss */
.profile-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 0;
}

/* 顶部背景 */
.profile-header {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  padding: 20rpx 30rpx 30rpx;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFF;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 数据统计卡片 */
.stats-card {
  background: #FFF;
  border-radius: 20rpx;
  padding: 30rpx 0;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E0E0E0;
}

/* 菜单区域 */
.menu-section {
  background: #FFF;
  border-radius: 20rpx;
  margin: 20rpx 30rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
  transition: background 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-hover {
  background: #F5F5F5;
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
  position: relative;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.menu-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.menu-badge {
  position: absolute;
  left: 50rpx;
  top: -8rpx;
  background: #F44336;
  color: #FFF;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 28rpx;
  text-align: center;
}

.menu-arrow {
  font-size: 28rpx;
  color: #BDBDBD;
  margin-left: 20rpx;
}

/* 底部安全区 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
  background: #F5F5F5;
}

/* 加载状态 */
.loading {
  padding: 100rpx 0;
  text-align: center;
}

.loading text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .user-name {
    font-size: 32rpx;
  }

  .stat-value {
    font-size: 36rpx;
  }
}
