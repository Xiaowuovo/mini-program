/* pages/admin/dashboard/dashboard.wxss */
.admin-container {
  min-height: 100vh;
  background: #f5f7fa;
}

/* 头部 */
.admin-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: #ffffff;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.welcome-desc {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.logout-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  font-size: 24rpx;
}

.logout-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

/* 数据统计 */
.stats-section {
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.stat-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 功能菜单 */
.menu-section {
  padding: 0 30rpx 30rpx;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.menu-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  text-align: center;
  transition: all 0.3s;
}

.menu-item:active {
  transform: scale(0.95);
}

.menu-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999999;
}
