/* pages/admin/stats/stats.wxss */
.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 通用样式 */
.stat-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  background: #f5f7fa;
  border-radius: 50%;
  font-size: 32rpx;
  border: none;
}

/* 总览部分 */
.overview-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  color: #ffffff;
}

.overview-section .section-title {
  color: #ffffff;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 24rpx;
}

.overview-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
}

.card-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.card-value {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.card-value.revenue {
  font-size: 36rpx;
}

.card-detail {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 饼图样式 */
.pie-chart {
  margin-top: 20rpx;
}

.chart-item {
  margin-bottom: 20rpx;
}

.chart-bar {
  height: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 8rpx;
  transition: width 0.5s;
}

.chart-bar.available {
  background: linear-gradient(90deg, #4CAF50 0%, #81C784 100%);
}

.chart-bar.rented {
  background: linear-gradient(90deg, #FF9800 0%, #FFB74D 100%);
}

.chart-bar.maintenance {
  background: linear-gradient(90deg, #F44336 0%, #EF5350 100%);
}

.chart-label {
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
}

.label-color {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.label-color.available {
  color: #4CAF50;
}

.label-color.rented {
  color: #FF9800;
}

.label-color.maintenance {
  color: #F44336;
}

/* 订单统计 */
.order-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.order-stat-item {
  text-align: center;
}

.stat-count {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin: 0 auto 12rpx;
}

.stat-count.pending {
  background: #FF9800;
}

.stat-count.confirmed {
  background: #2196F3;
}

.stat-count.in-progress {
  background: #4CAF50;
}

.stat-count.completed {
  background: #9C27B0;
}

.stat-count.cancelled {
  background: #F44336;
}

.stat-name {
  font-size: 24rpx;
  color: #666666;
}

/* 收入趋势 */
.trend-chart {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  height: 280rpx;
  margin-top: 20rpx;
  padding-top: 40rpx;
}

.trend-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.trend-bar {
  width: 60rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx 8rpx 0 0;
  position: relative;
  transition: height 0.5s;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 8rpx;
}

.trend-amount {
  font-size: 20rpx;
  color: #ffffff;
  transform: scale(0.8);
}

.trend-date {
  font-size: 22rpx;
  color: #999999;
  margin-top: 12rpx;
}

/* 热门菜地 */
.top-list {
  margin-top: 20rpx;
}

.top-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.top-rank {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  margin-right: 20rpx;
}

.rank-1 {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.rank-2 {
  background: linear-gradient(135deg, #C0C0C0 0%, #A9A9A9 100%);
}

.rank-3 {
  background: linear-gradient(135deg, #CD7F32 0%, #B8860B 100%);
}

.rank-4,
.rank-5 {
  background: #999999;
}

.top-info {
  flex: 1;
}

.top-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.top-detail {
  font-size: 24rpx;
  color: #999999;
}
