/* pages/index/index.wxss */
.container {
  padding-bottom: 40rpx;
}

/* 轮播图容器 */
.banner-swiper {
  height: 360rpx;
  margin: 24rpx 32rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.08);
  transform: translateZ(0); /* 硬件加速 */
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

/* 功能入口 */
.function-grid {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  margin-bottom: 20rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.function-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.function-item:active .function-icon-wrapper {
  transform: scale(0.95);
  background: #F5F5F5;
}

.function-icon {
  width: 56rpx;
  height: 56rpx;
}

.function-item text {
  font-size: 26rpx;
  color: var(--text-main);
  font-weight: 500;
}

/* 通用区块样式 */
.section {
  margin-top: 32rpx;
  padding: 0 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-main);
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: 4rpx;
}

.section-more {
  font-size: 26rpx;
  color: var(--text-light);
  display: flex;
  align-items: center;
}

/* 热门菜地卡片 */
.garden-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.garden-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
}

.garden-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.garden-info {
  padding: 24rpx;
}

.garden-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 12rpx;
}

.garden-desc {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.garden-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: #F5F7FA;
  color: var(--text-secondary);
  border-radius: 8rpx;
}

.garden-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #F0F0F0;
  padding-top: 20rpx;
}

.garden-price {
  display: flex;
  align-items: baseline;
}

.price-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #FF5252;
}

.price-unit {
  font-size: 24rpx;
  color: var(--text-light);
  margin-left: 4rpx;
}

.garden-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.status-available { background: #E8F5E9; color: #4CAF50; }
.status-rented { background: #FFEBEE; color: #FF5252; }
.status-maintenance { background: #FFF3E0; color: #FF9800; }

/* 社区动态卡片 */
.post-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.post-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #F0F0F0;
}

.post-user {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.post-time {
  font-size: 22rpx;
  color: var(--text-light);
  margin-top: 4rpx;
}

.post-content {
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 12rpx;
}

.post-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-footer {
  display: flex;
  justify-content: flex-end;
  gap: 32rpx;
}

.post-stat {
  font-size: 24rpx;
  color: var(--text-light);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.8;
}

.empty-state text {
  font-size: 26rpx;
  color: var(--text-light);
}