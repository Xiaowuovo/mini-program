/* pages/index/index.wxss */
.container {
  padding-bottom: 20rpx;
  background: #F5F7FA;
  min-height: 100vh;
}

/* 欢迎栏 */
.welcome-bar {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  padding-bottom: 30rpx;
}

/* 自定义导航栏 */
.custom-navbar {
  height: 44px;
  padding-top: env(safe-area-inset-top);
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #FFF;
}

.welcome-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx 0;
}

.welcome-text {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  flex-wrap: nowrap;
  white-space: nowrap;
}

.greeting {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
}

.user-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #FFF;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200rpx;
}

.weather-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
}

.weather-icon {
  font-size: 32rpx;
}

.weather-text {
  font-size: 26rpx;
  color: #FFF;
  font-weight: 600;
}

/* 轮播图 */
.banner-swiper {
  height: 320rpx;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.15);
}

.banner-item {
  position: relative;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  padding: 40rpx 30rpx 25rpx;
}

.banner-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFF;
  margin-bottom: 8rpx;
}

.banner-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 自定义指示器 */
.custom-indicator {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  margin: 15rpx 0 20rpx;
  position: relative;
  z-index: 10;
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transition: all 0.3s;
}

.indicator-dot.active {
  width: 32rpx;
  border-radius: 6rpx;
  background: #FFF;
}

/* 快捷入口 */
.quick-actions {
  background: #FFF;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.function-grid {
  display: flex;
  justify-content: space-around;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.function-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  transition: all 0.3s;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.bg-green {
  background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
}

.bg-blue {
  background: linear-gradient(135deg, #E3F2FD, #BBDEFB);
}

.bg-orange {
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
}

.bg-purple {
  background: linear-gradient(135deg, #F3E5F5, #E1BEE7);
}

.function-item:active .function-icon-wrapper {
  transform: scale(0.95);
}

.function-emoji {
  font-size: 48rpx;
}

.function-label {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.function-badge {
  position: absolute;
  top: 0;
  right: 10rpx;
  background: #4CAF50;
  color: #FFF;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  font-weight: 600;
}

.function-badge.red {
  background: #F44336;
}

/* 数据统计 */
.stats-section {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #FFF;
  margin: 0 30rpx 20rpx;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stat-icon {
  font-size: 48rpx;
}

.stat-info {
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #4CAF50;
  line-height: 1.2;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E0E0E0;
}

/* 通用区块 */
.section {
  margin: 0 30rpx 25rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title-wrapper {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.section-icon {
  font-size: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #999;
  transition: all 0.3s;
}

.section-more:active {
  opacity: 0.7;
}

.arrow {
  font-size: 28rpx;
  color: #4CAF50;
  transition: transform 0.3s;
}

.section-more:active .arrow {
  transform: translateX(6rpx);
}

/* 菜地横向滚动 */
.garden-scroll {
  width: 100%;
  white-space: nowrap;
}

.garden-list-horizontal {
  display: inline-flex;
  gap: 20rpx;
  padding: 0 0 10rpx 0;
}

.garden-card-h {
  display: inline-block;
  width: 520rpx;
  background: #FFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.garden-card-h:active {
  transform: scale(0.98);
}

.garden-card-h:first-child {
  margin-left: 0;
}

.garden-card-h:last-child {
  margin-right: 0;
}

.garden-image-h {
  width: 100%;
  height: 280rpx;
  display: block;
  position: relative;
}

.garden-overlay {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 10;
}

.garden-status-tag {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.status-available {
  background: rgba(232, 245, 233, 0.95);
  color: #4CAF50;
}

.status-rented {
  background: rgba(255, 235, 238, 0.95);
  color: #F44336;
}

.status-maintenance {
  background: rgba(255, 243, 224, 0.95);
  color: #FF9800;
}

.garden-info-h {
  padding: 24rpx;
}

.garden-name-h {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.garden-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  font-size: 22rpx;
  color: #666;
}

.garden-footer-h {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #F0F0F0;
}

.garden-price-h {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  color: #F44336;
  margin-right: 4rpx;
}

.price-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #F44336;
}

.price-unit {
  font-size: 22rpx;
  color: #999;
  margin-left: 4rpx;
}

.rent-btn {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: #FFF;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-weight: 600;
}

/* 种植知识 */
.knowledge-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.knowledge-card {
  background: #FFF;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.knowledge-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.knowledge-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.knowledge-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.knowledge-desc {
  font-size: 22rpx;
  color: #999;
}

/* 社区动态 */
.post-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.post-card {
  background: #FFF;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.post-card:active {
  transform: scale(0.99);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid #F0F0F0;
}

.post-user {
  flex: 1;
}

.user-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.post-time {
  font-size: 22rpx;
  color: #999;
}

.post-content {
  margin-bottom: 16rpx;
}

.post-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.post-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-footer {
  display: flex;
  gap: 30rpx;
}

.post-stat {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  color: #999;
}

.stat-icon {
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FFF;
  border-radius: 20rpx;
}

.empty-icon {
  font-size: 100rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-btn {
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: #FFF;
  font-size: 26rpx;
  border-radius: 30rpx;
  font-weight: 600;
}

/* 底部安全区 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
}
