/* pages/services/services.wxss */
.services-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 20rpx;
}

/* 顶部横幅 */
.header-banner {
  position: relative;
  height: 280rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  padding: 40rpx 30rpx;
  overflow: hidden;
}

.banner-content {
  position: relative;
  z-index: 2;
}

.banner-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #FFF;
  margin-bottom: 12rpx;
}

.banner-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.banner-image {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 300rpx;
  height: 200rpx;
  opacity: 0.15;
}

/* 统计数据 */
.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #FFF;
  margin: -40rpx 30rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 600;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E0E0E0;
}

/* 分类标签 */
.category-section {
  margin: 0 0 20rpx;
  background: #FFF;
  padding: 20rpx 0;
}

.tabs-scroll {
  width: 100%;
  white-space: nowrap;
}

.tabs-wrapper {
  display: inline-flex;
  padding: 0 30rpx;
}

.tab-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 28rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  background: #F5F5F5;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-name {
  color: #FFF;
  font-weight: 500;
}

/* 服务列表 */
.service-list {
  padding: 0 30rpx;
}

.service-card {
  background: #FFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 服务头部 */
.service-header {
  display: flex;
  margin-bottom: 24rpx;
}

.service-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.service-icon {
  font-size: 50rpx;
}

.service-info {
  flex: 1;
}

.service-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.service-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
}

.popular-badge {
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #FF9800, #FFB74D);
  color: #FFF;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.service-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 特色标签 */
.features-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 24rpx;
}

.feature-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #E8F5E9;
  color: #4CAF50;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.feature-icon {
  margin-right: 6rpx;
  font-size: 18rpx;
}

/* 服务详情 */
.service-details {
  display: flex;
  padding: 20rpx 0;
  border-top: 1rpx solid #F0F0F0;
  border-bottom: 1rpx solid #F0F0F0;
  margin-bottom: 24rpx;
}

.detail-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.detail-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 底部操作 */
.service-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.service-price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  color: #F44336;
  margin-right: 4rpx;
}

.price-number {
  font-size: 44rpx;
  font-weight: 600;
  color: #F44336;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 6rpx;
}

.book-btn {
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: #FFF;
  font-size: 28rpx;
  border-radius: 50rpx;
  border: none;
}

/* 加载状态 */
.loading-state {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(76, 175, 80, 0.3);
  border-top-color: #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 15rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.refresh-btn {
  padding: 16rpx 48rpx;
  background: #4CAF50;
  color: #FFF;
  font-size: 28rpx;
  border-radius: 50rpx;
  border: none;
}

/* 服务说明 */
.tips-section {
  background: #FFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 30rpx;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  padding: 8rpx 0;
}

.tip-dot {
  color: #4CAF50;
  margin-right: 12rpx;
  font-size: 28rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部安全区 */
.safe-bottom {
  height: env(safe-area-inset-bottom);
}
